<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyEmailApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Light Theme colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.MyEmailApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyEmailApp.Launcher" parent="Theme.MyEmailApp">
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="android:windowDisablePreview">false</item>
    </style>

    <style name="Theme.MyEmailApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyEmailApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
